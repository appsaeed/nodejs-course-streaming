<%- include('layout/header.ejs', {title : "Search Courses"}) %>

<!-- courses section starts  -->

<section class="courses">

   <h1 class="heading">search results</h1>

   <div class="box-container">
      <% if (courses?.length > 0) { %>
      <% courses.forEach(item => { %>
         <div class="box">
            <div class="tutor">
               <img src="/uploaded_files/<%= item.tutor.image  %>" alt="">
               <div>
                  <h3><%= item.tutor.name  %></h3>
                  <span><%= item.date  %></span>
               </div>
            </div>
            <img src="/uploaded_files/<%= item.thumb  %>" class="thumb" alt="">
            <h3 class="title"><%= item.title  %></h3>
            <a href="/playlist/<%= item.id  %>" class="inline-btn">view playlist</a>
         </div>
      <% }) %>
      <% } else { %>
      <p class="empty">no courses found!</p>
      <% } %>
   </div>

</section>

<!-- courses section ends -->

<%- include('layout/footer.ejs') %>