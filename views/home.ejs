<section class="courses">

   <h1 class="heading">latest courses</h1>

   <div class="box-container">

      <% if (playlist && playlist.length > 0) { %>
      <% playlist.forEach(list => { %>
         <div class="box">
            <div class="tutor">
               <img src="uploaded_files/<%= list.tutor.image; %>" alt="<%= list.tutor.name %>">
               <div>
                  <h3><%= list.tutor.name; %></h3>
                  <span><%= list.date; %></span>
               </div>
            </div>
            <img src="uploaded_files/<%= list.thumb %>" class="thumb" alt="">
            <h3 class="title"><%= list.title; %></h3>
            <a href="playlist.php?get_id=<%= list.title %>" class="inline-btn">view playlist</a>
         </div>
      <% }) %>
