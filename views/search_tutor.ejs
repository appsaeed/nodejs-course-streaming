<%- include('layout/header.ejs', {title : 'Search Tutors'}) %>

<section class="teachers">

   <h1 class="heading">Expert Tutors</h1>

   <form action="/search_tutor" method="get" class="search-tutor">
      <% if (search) { %>
         <input type="text" name="search" maxlength="100"  value="<%= search  %>">
      <% } else { %>
         <input type="text" name="search" maxlength="100" placeholder="search tutor..." required>
      <% }  %>
      <button type="submit" class="fas fa-search"></button>
   </form>

   <div class="box-container">
      <% if (tutors?.length > 0) { %>
      <% tutors.forEach(item => { %>
         
         <div class="box">
            <div class="tutor">
               <img src="/uploaded_files/<%= item.image  %>" alt="">
               <div>
                  <h3><%= item.name  %></h3>
                  <span><%= item.profession  %></span>
               </div>
            </div>
            <p>Playlist : <span><%= item.total_playlists  %></span></p>
            <p>Total videos : <span><%= item.total_videos  %></span></p>
            <p>Total likes : <span><%= item.total_likes  %></span></p>
            <p>Total comments : <span><%= item.total_comments  %></span></p>
            <a href="/tutor-profile/<%= item.id  %>" class="inline-btn">view profile </a>
         </div>
      <% }) %>
      <% } else { %>
      <p class="empty">No results found!</p>
      <% } %>
   </div>

</section>

<!-- teachers section ends -->

<%- include('layout/footer.ejs') %>