<%- include('../layout/header.ejs', { title : 'Register'}) %>

<section class="form-container">

   <form class="register" action="/register" method="post" enctype="multipart/form-data">
      <h3>Create account</h3>
      <div class="flex">
         <div class="col">
            <p>Your name <span>*</span></p>
            <input type="text" name="name" placeholder="eneter your name" maxlength="50" required class="box">
            <p>Your email <span>*</span></p>
            <input type="email" name="email" placeholder="enter your email" maxlength="20" required class="box">
         </div>
         <div class="col">
            <p>Your password <span>*</span></p>
            <input type="password" name="password" placeholder="enter your password" min="4" required class="box">
            <p>Confirm password <span>*</span></p>
            <input type="password" name="confirm_password" placeholder="confirm your password" min="4" required class="box">
         </div>
      </div>
      <p>select pic <span>*</span></p>
      <input type="file" name="image" accept="image/*" required class="box">
      <p class="link">Already have an account? <a href="/login">Login now</a></p>
      <input type="submit" name="submit" value="register now" class="btn">
   </form>

</section>



